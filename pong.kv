#: kivy 1.11.1

<MenuButton@Button>:
    font_size: '50sp'

<Menu>:
    BoxLayout:
        orientation: 'vertical'
        padding:'50dp','50dp'
        spacing: '150dp'
        Label:
            font_size: '140sp'
            center_x: root.center_x
            center_y: root.center_y
            text: 'PONG'
        BoxLayout:
            spacing:'50dp'
            MenuButton:
                text: 'Start'
                on_release:app.root.current = 'game'
            MenuButton:
                text: 'Exit'
                on_release:app.stop()

<GameScreen>:

<PongGame>:
    ball: pong_ball
    player1: player_left
    player2: player_right

    #line that separates the fields
    canvas:
        Rectangle:
            pos: self.center_x - 5, 0
            size: 10, self.height

    #label with score
    Label:
        font_size: 70
        center_x: root.width / 4
        top: root.top - 50
        text: str(root.player1.score)

    Label:
        font_size: 70
        center_x: root.width * 3 / 4
        top: root.top - 50
        text: str(root.player2.score)

    #ball
    PongBall:
        id: pong_ball
        center: self.parent.center

    #players
    PongPaddle:
        id: player_left
        x: root.x
        center_y: root.center_y

    PongPaddle:
        id: player_right
        x: root.width - self.width
        center_y: root.center_y

<PongBall>:
    size: 25, 25
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size

<PongPaddle>:
    size: 25, 200
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
